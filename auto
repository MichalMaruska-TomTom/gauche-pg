#! /bin/sh

## Multi-version-api packaging:
# debian/control
#sed -e "s/@PG_VERSION@/$PG_VERSION/" debian/control.in > debian/control
make -f debian/rules  debian/control

GAUCHE_VERSION=$(gauche-config -V|sed -e 's/_/-/');

PG_VERSION=$(pg_config --version |sed -e 's/^PostgreSQL //;s/\.[[:digit:]]\+$//');

make -f debian/rules  debian/control
mv debian/gauche-pg.install debian/gauche-$GAUCHE_VERSION-pg-$PG_VERSION.install



# provide the   Automake related files ... install-sh

# sort of run Automake(1)
touch Makefile.am
mv -v Makefile.in Makefile.in.real
touch NEWS README ChangeLog AUTHORS
autoreconf --install


export WANT_AUTOCONF_2_5=1
autoconf  --include `gauche-config --ac` configure.in> configure
mv -v Makefile.in.real Makefile.in
chmod +x  ./configure
